#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp KP_N1   &kp KP_N2   &kp KP_N3   &mo 1
            >;
        };

        bt_layer { 
            bindings = <
                    &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_CLR    &bootloader
            >;
        };

    };
};